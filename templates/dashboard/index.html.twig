                                        {% elseif ds.state == "Published" %}
                                            <div class="flex-none rounded-full p-1 text-indigo-500 bg-gray-100/10">
                                                <div class="h-2 w-2 rounded-full bg-current"></div>
                                            </div>
                                        {% endif %}
                                        <h2 class="min-w-0 text-sm font-semibold leading-6 text-gray-700">
